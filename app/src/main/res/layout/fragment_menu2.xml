<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Menu1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:layout_height="32dp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/round_button1"
                android:id="@+id/btnConnect"
                android:text="BlueTooth"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/frag2_vs_main" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/frag2_vs_another" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="350dp"
                android:background="@drawable/vs_round"
                android:stretchColumns="*">

                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="10dp">

                    <TextView
                        android:text="User"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Family"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Friend"
                        android:textAlignment="center"
                        android:textColor="#65b9d6"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="#D8D8D8" />

                <TableRow android:padding="10dp">

                    <TextView
                        android:text="Me"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Connect to Bluetooth"
                        android:id="@+id/text_water"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="1st"
                        android:textAlignment="center"
                        android:textColor="#65b9d6"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#848484" />

                <TableRow android:padding="10dp">

                    <TextView
                        android:text="Yun"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="2nd"
                        android:textAlignment="center"
                        android:textColor="#65b9d6"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#848484" />

                <TableRow android:padding="10dp">

                    <TextView
                        android:text="Min"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="3rd"
                        android:textAlignment="center"
                        android:textColor="#65b9d6"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </TableRow>


            </TableLayout>
        </FrameLayout>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="값 보내기(제작중 필요없으면 버림)"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>